
<div class="banner">
    <h1>The Cocktail Guide</h1>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-img">

        </div>
        <div class="card-body">
          <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
        </div>
      </div>
    </div>

    <% end %>
  </div>

  <br>
  <br>
  <%= link_to 'Add a Cocktail', new_cocktail_path, class: 'btn btn-primary rounded' %>
</div>
